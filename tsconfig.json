{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "src/**/*"],
  "exclude": ["node_modules", "build", "**/*.test.ts", "**/*.spec.ts", "uploads/**/*"],
  "compilerOptions": {
  "outDir": "./dist",
  "rootDir": ".",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",

    "module": "ESNext",
    "target": "ES2022",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
  "@shared/*": ["./shared/*"],
  "@shared/zed": ["./packages/shared/src/zed.ts"],
      "@zebulon/ai": ["./packages/ai/index.ts"]
    },
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  }
}
