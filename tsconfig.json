{
	"compilerOptions": {
			"paths": {
				"packages/shared": ["packages/shared/index.d.ts"],
				"packages/shared/*": ["packages/shared/*"],
				"shared/schema": ["packages/shared/schema.d.ts"]
		},
		"target": "ES2020",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"moduleResolution": "nodenext",
		"baseUrl": "."
	},
			"include": ["server/**/*.ts", "apps/**/*.ts", "packages/**/*.ts", "types/**/*.d.ts", "drizzle-orm.d.ts", "global.d.ts"],
			"exclude": [
				"node_modules/drizzle-orm/mysql-core/**/*",
				"node_modules/drizzle-orm/singlestore-core/**/*",
				"node_modules/drizzle-orm/sqlite-core/**/*",
				"node_modules/drizzle-orm/neon-serverless/**/*",
				"node_modules/drizzle-orm/gel-core/**/*"
			]
}
