{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./dist-types/.tsbuildinfo",
    "outDir": "dist",
    "rootDir": "src",
    "module": "esnext",
    "target": "es2020",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["../shared/*"],
      "@/components/*": ["components/*"]
    }
  }
  ,"references": [
    { "path": "../shared" }
  ]
}
