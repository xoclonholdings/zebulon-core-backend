{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "outDir": "dist-types",
    "tsBuildInfoFile": "./dist-types/.tsbuildinfo",
    "noEmit": false,
    "module": "esnext",
    "target": "es2020",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["*"],
      "@/components/*": ["components/*"]
    }
  },
  "include": ["src/**/*"]
}
