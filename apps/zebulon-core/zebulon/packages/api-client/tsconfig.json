{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "rootDir": "src",
    "module": "esnext",
    "target": "es2020",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["../shared/*"],
      "@/components/*": ["components/*"]
    }
  },
  "include": ["src"]
}
