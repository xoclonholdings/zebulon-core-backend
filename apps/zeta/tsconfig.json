{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "../../types/**/*.d.ts"],
  "exclude": [
    "node_modules", "build", "dist", "**/*.test.ts",
    "node_modules/drizzle-orm/mysql-core/**",
    "node_modules/drizzle-orm/singlestore-core/**",
    "node_modules/drizzle-orm/sqlite-core/**",
    "node_modules/drizzle-orm/gel-core/**",
    "node_modules/drizzle-orm/neon-serverless/**"
  ],
  "compilerOptions": {
  "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
  "emitDeclarationOnly": true,
  "declaration": true,
    "module": "esnext",
    "target": "es2020",
    "downlevelIteration": true,
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "baseUrl": "./client/src",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["../../shared/*"],
      "@/components/*": ["components/*"]
    }
  }
}
